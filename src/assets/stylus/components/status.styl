.user-status
  background radial-gradient(248.22% 257.37% at 9.27% 93.95%, rgba(161,128,255,0.1) 0%, rgba(74,157,255,0.1) 50%, rgba(117,247,255,0.1) 100%)
  background-color #313135
  font-size 12px
  line-height 19px
  padding 3px 5px
  border-radius 5px
  color #fff
  white-space nowrap
  display flex
  align-items center
  justify-content center
  word-break break-all

  &:before
    content ''
    display none
    width 5px
    height 5px
    border-radius 50%
    background-color eucalypt
    margin-right 5px
  
  &.online
    color #fff

    &:before
      display block   
  
  &.offline
    color #A6A6A6

    &:before
      display block
      background-color #C5C5C5
    
  

